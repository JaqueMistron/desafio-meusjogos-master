@model MeusJogos.Models.JogoAmigoViewModel
<div class="modal fade" id="modalDetalharJogoComAmigo" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="exampleModalLabel">O amigo @Model.Amigo.Nome está com o jogo: @Model.Jogo.Titulo.</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    @if (Model.DataDevolucao.HasValue)
                    {
                        <h5>Retirou no dia @Model.DataRetirada.ToShortDateString() e a devolução é dia @Model.DataDevolucao.Value.ToShortDateString()</h5>
                    }
                    else
                    {
                        <h5>Retirou no dia @Model.DataRetirada.ToShortDateString() e a devolução é indefinida.</h5>
                    }
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
            </div>
        </div>
    </div>
</div>
