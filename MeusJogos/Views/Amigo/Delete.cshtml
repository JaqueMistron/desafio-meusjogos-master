@model MeusJogos.Models.AmigoViewModel

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Excluir amigo</h2>

<h3>Tem certeza que deseja excluir o amigo @Model.Nome?</h3>
<div>
    <hr />
    @if (Model.ListaJogosEmprestados.Any())
    {
        <div class="alert alert-danger">
            <b>Atenção!</b> O amigo @Model.Nome possui <a id="detalharJogoAmigo" class="alert-link" href="#">jogos não devolvidos.</a>
        </div>
    }
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.Nome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Telefone)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Telefone)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Excluir" class="btn btn-danger" />
        </div>
    }
    <hr />
    <div>
        @Html.ActionLink("Voltar", "Index")
    </div>

</div>
<div id="containerModal"></div>
@section scripts{
    <script type="text/javascript">
        var app = app || {};
        app.Urls = app.Urls || {};
        app.Urls.urlBase = '@Url.Content("~")';
        app.Urls.urlListarJogosAmigo = '@Url.Action("ListarJogosAmigo", "Amigo")';

        var modelAmigo = {
            IdAmigo: '@Model.IdAmigo'
        };

    </script>
    <script type="text/javascript" src="@Scripts.Url("~/Scripts/geral.js")"></script>
    <script type="text/javascript" src="@Scripts.Url("~/Scripts/Amigo/amigo.js")"></script>
}


