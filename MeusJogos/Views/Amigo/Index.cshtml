@model IEnumerable<MeusJogos.Models.AmigoViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Amigos cadastrados</h2>
<p>
    @Html.ActionLink("Novo", "Create")
</p>
<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefone)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefone)
            </td>
            <td>
                @Html.ActionLink("Detalhar", "Details", new { id = item.IdAmigo }) |
                @Html.ActionLink("Alterar", "Edit", new { id = item.IdAmigo }) |
                @Html.ActionLink("Excluir", "Delete", new { id = item.IdAmigo })
            </td>
        </tr>
    }
</table>
